<li class="list-group-item notification-item {{if isSelected "active"}}">
  <div class="row vertical-align">
    <div class="col-sm-9 col-sm-offset-1" {{action "toggleCheckbox" preventDefault=false}}>
      <div class="list-group-item-heading">{{heading}}</div>
    </div>
    <div class="col-sm-2">
      <div class="pull-right">
        <a class="btn btn-default btn-sm" href="#"><i class="fa fa-trash-o fa-lg"></i>&nbsp;Delete</a>
        <a class="btn btn-default btn-sm" href="#"><i class="fa fa-volume-off fa-lg"></i>&nbsp;Mute</a>
      </div>
    </div>
  </div>

  <div class="row vertical-align" {{action "toggleCheckbox" preventDefault=false}}>
    <div class="col-sm-1">
      {{input type="checkbox" class="pull-left notification-checkbox" checked=isSelected}}
    </div>
    <div class="col-sm-10">
      <p class="list-group-item-text">{{content}}</p>
    </div>
  </div>

  <div class="row vertical-align per-notification-tag">
    <div class="col-sm-10 col-sm-offset-1">
      {{
      notification-tags
      fontAwesomeIcon="fa-tags"
      placeholder="Notification tags"
      tagmode=true
      allowClear=false
      data=data
      itemAdded="itemAdded"
      itemRemoved="itemRemoved"
      select2DropdownParent=".per-notification-tag"
      }}
    </div>
  </div>
</li>
